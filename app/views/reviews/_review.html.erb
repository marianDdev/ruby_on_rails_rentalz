<div id="<%= dom_id review %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Rating:</strong>
    <%= review.rating %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Message:</strong>
    <%= review.message %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Property:</strong>
    <%= review.property_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= review.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this review", review, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this review', edit_review_path(review), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
