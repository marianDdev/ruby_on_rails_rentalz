<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-4 gap-5">
  <% @properties.each do |p| %> <%= link_to(p) do%>
  <div class="h-104 rounded overflow-hidden shadow-lg">
    <% if p.images.attached? %>
    <%= image_tag p.images.first, class: "h-56 w-full" %>
    <% else %> <%= image_tag 'apartment.jpeg' %> <% end %>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= p.city %>, <%= p.country %></div>
      <p class="text-gray-700 text-base"><%= p.description %></p>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        ><%= p.rating %> stars</span
      >
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        ><%= p.reviews %> reviews</span
      >
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        ><%= p.category %></span
      >
    </div>
  </div>
  <% end %>
  <% end %>
</div>

<%= render('partials/pagination') %>
