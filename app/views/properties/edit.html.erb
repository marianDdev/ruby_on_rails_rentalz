<section class="bg-white dark:bg-gray-900">
  <div
    class="
      gap-16
      items-center
      py-8
      px-4
      mx-auto
      max-w-screen-xl
      lg:grid
      lg:grid-cols-2
      lg:py-16
      lg:px-6
    "
  >
    <div class="font-light text-gray-500 sm:text-lg dark:text-gray-400">
      <p
        class="
          mb-4
          text-4xl
          tracking-tight
          font-extrabold
          text-gray-900
          dark:text-white
          text-center
        "
      >Edit property
        <%= @property.name %>
        from
        <%= @property.city %>,
        <%= @property.country %>
      </p>
    </div>
  </div>
</section>
<div class="mt-10 sm:mt-0 text-black">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= render "partials/property_form" %>
    </div>
  </div>
</div>
