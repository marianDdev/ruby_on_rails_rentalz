<%= link_to(booking) do %>
  <div class="h-104 rounded overflow-hidden shadow-lg">
    <div class="px-6 py-4">
      <%= image_tag define_image_url(booking.property), class: "h-56 w-full" %>
      <div class="font-bold text-xl mb-2">Property:
        <%= booking.property.name %> from <%= booking.property.city %>, <%= booking.property.country %>
      </div>
      <p class="text-gray-700 text-base">Guest:
        <%= current_user.full_name %></p>
      <p class="text-gray-700 text-base">Check-in:
        <%= booking.start_at %></p>
      <p class="text-gray-700 text-base">Checkout:
        <%= booking.end_at %></p>
      <p class="text-gray-700 text-base">Guests number:
        <%= booking.guests_count %></p>
      <p class="text-gray-700 text-base">Status:
        <%= booking.status %></p>

      <% if reviewable(booking) %>
        <%= link_to "Add review",
      new_review_path(booking_id: booking.id),
      class:
        "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-2" %>
      <% end %>
    </div>
  </div>
<% end %>
