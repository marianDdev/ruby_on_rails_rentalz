<div class="block rounded-lg p-4 shadow-sm shadow-indigo-100">


  <div class="mt-2">
    <dl>
      <div>
        <dt class="sr-only">Number of guests</dt>

        <dd class="text-sm text-gray-500"><%= @booking.guests_count %>,00</dd>
      </div>

      <div>
        <dt class="sr-only">Check-in</dt>

        <dd class="font-medium"><%= @booking.start_at %></dd>
      </div>
      <div>
        <dt class="sr-only">Checkout</dt>

        <dd class="font-medium"><%= @booking.end_at %></dd>
      </div>
    </dl>

    <div class="mt-6 flex items-center gap-8 text-xs">
      <div class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2">

        <div class="mt-1.5 sm:mt-0">
          <p class="text-gray-500">Status</p>

          <p class="font-medium"><%= @booking.status %></p>
        </div>
      </div>
    </div>
  </div>
</div>